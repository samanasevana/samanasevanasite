---
import { getCollection } from "astro:content";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import Layout from "../../layouts/Layout.astro";

const reflectionPosts = await getCollection("reflection");
const translationPosts = await getCollection("translation");
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main>
    <article>
      <h1>The Quality</h1>

      <h2>Reflections</h2>
    </article>
    <ul class="flex flex-col gap-1.5">
      {
        reflectionPosts.map((post) => (
          <li>
            <a
              href={`/thequality/${post.slug}`}
              class="group flex justify-between gap-3"
            >
              <span class="group-hover:underline">{post.data.title}</span>
            </a>
          </li>
        ))
      }
    </ul>

    <article class="mt-8">
      <h2>Translations</h2>
    </article>
    <ul class="flex flex-col gap-1.5">
      {
        translationPosts.map((post) => (
          <li>
            <a
              href={`/translations/${post.slug}`}
              class="group flex justify-between gap-3"
            >
              <span class="group-hover:underline">{post.data.title}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
