---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../layouts/Layout.astro";

import { Content } from "../content/pages/index.md";
import EventsTable from "../components/EventsTable.astro";

const introText =
  "Welcome to our community space for those interested in the monastic path, supporting monastics in general, and the journey of Bhante Gunaviro in particular.";
---

<Layout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
>
  <main class="space-y-6">
    <div class="flex items-center gap-2">
      <img
        src="/static/bhante-1.png"
        alt="Bhante"
        class="h-36 w-full rounded-md border border-zinc-500/50 object-cover"
      />
      <img
        src="/static/bhante-2.png"
        alt="Leaf"
        class="h-36 w-full rounded-md border border-zinc-500/50 object-cover"
      />
    </div>
    <article class="space-y-6 text-base text-slate-700">
      <p class="text-lg text-slate-900">{introText}</p>
      <div class="space-y-3 text-base text-slate-900">
        <p>
          <u>Community Schedule:</u>
          All are welcome to attend Dhamma Talks or Drop-In Hours. If attending a Dhamma Talk, please arrive
          before the starting time.
        </p>
        <div class="rounded-2xl border border-slate-200 bg-slate-50/60 p-4 text-sm text-slate-700">
          <div class="mb-2 flex items-center gap-2">
            <span class="inline-flex items-center rounded-full bg-sky-50 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-sky-700 ring-1 ring-inset ring-sky-500/30">
              Winter Retreat
            </span>
            <span class="text-xs font-medium uppercase tracking-wide text-slate-500">Nov 20 â€“ Jan 17</span>
          </div>
          <p>
            During Winter Retreat, Bhante Gunaviro will not be available for drop-in hours or discussions after the
            meal. Dhamma talks will continue as scheduled. To make a meal offering during the retreat, please email
            <a class="font-semibold text-slate-900 underline-offset-2 hover:underline" href="mailto:samanasevana@gmail.com">
              samanasevana@gmail.com
            </a>
            .
          </p>
        </div>
      </div>
      <div class="lg:mx-[-100px]">
        <EventsTable />
      </div>
      <Content />
    </article>
  </main>
</Layout>
