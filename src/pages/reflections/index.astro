---
import { getCollection } from "astro:content";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import Layout from "../../layouts/Layout.astro";

const reflectionPosts = await getCollection("reflection");
---

<Layout title={`Reflections - ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <main>
    <article>
      <h1>Reflections</h1>
    </article>
    <ul class="flex flex-col gap-1.5">
      {
        reflectionPosts.map((post) => (
          <li>
            <a
              href={`/reflections/${post.slug}`}
              class="group flex justify-between gap-3"
            >
              <span class="group-hover:underline">{post.data.title}</span>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>